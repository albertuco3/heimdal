{% extends '/backend.html.twig' %}
{% block toolbar %}
    <a href="{{ path('app_admin_users_create') }}" class="btn btn-primary">Nuevo usuario</a>
{% endblock %}
{% block content %}
    <h1>Usuarios</h1>
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <table class="table">
                    <thead>
                        <tr>

                            <th>
                                Usuario
                            </th>
                            <th>

                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <td>
                                    {{ user.firstName }} {{ user.lastName }}
                                </td>
                                <td class="d-flex justify-content-end gap-3">
                                    <a class="btn btn-default" href="{{ path('app_admin_users_single', {'id': user.id}) }}">
                                        <i class="fa fa-pencil"></i>
                                    </a>
                                    <a class="btn btn-danger" href="{{ path('app_admin_users_delete', {'id': user.id}) }}">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

